extend ./skeleton.jade

block content
  div.container
    div.row
      div.col-md-6.col-md-offset-3
        div.panel.panel-default
          div.panel-heading
            | Log in to Ekceltricity
          div.panel-body
            form.form-horizontal(method="POST", action="/login")
              if messages.length > 0
                div.form-group.text-center
                  label.alert.alert-warning #{messages}
              div.form-group
                label.col-sm-4.control-label Email
                div.col-sm-7
                  input.form-control(type="email", name="email", required, autofocus)
              div.form-group
                label.col-sm-4.control-label Password
                div.col-sm-7
                  input.form-control(type="password", name="password", required)
              div.col-sm-3.col-sm-offset-4
                button.btn.btn-success Log in
    div.row
      div.col-md-4.col-md-offset-4.text-center
          p 
            a(href="/signup")
                | New to Ekceltricity? Create an account!
